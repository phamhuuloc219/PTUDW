﻿@model MyClass.Model.Products

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="wrapper">
    <div class="content-wrapper">
        <section class="content">

            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">CHI TIẾT SẢN PHẨM</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Create","Product")" class="btn-sm btn-success"><i class="fa fa-plus"> Thêm</i></a>
                            <a href="@Url.Action("Index","Product")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @*hien thi dong thong bao*@
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.CatId)</th>
                                <th>@Html.DisplayNameFor(model => model.SupplierID)</th>
                                <th>@Html.DisplayNameFor(model => model.Price)</th>
                                <th>@Html.DisplayNameFor(model => model.SalePrice)</th>
                                <th>@Html.DisplayNameFor(model => model.Amount)</th>
                                <th>@Html.DisplayNameFor(model => model.MetaKey)</th>
                                <th>@Html.DisplayNameFor(model => model.UpdateBy)</th>
                                <th>@Html.DisplayNameFor(model => model.CreateBy)</th>
                                <th>@Html.DisplayNameFor(model => model.CreateAt)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.CatId)</td>
                                <td>@Html.DisplayFor(model => model.SupplierID)</td>
                                <td>@Html.DisplayFor(model => model.Price)</td>
                                <td>@Html.DisplayFor(model => model.SalePrice)</td>
                                <td>@Html.DisplayFor(model => model.Amount)</td>
                                <td>@Html.DisplayFor(model => model.MetaKey)</td>
                                <td>@Html.DisplayFor(model => model.UpdateBy)</td>
                                <td>@Html.DisplayFor(model => model.CreateBy)</td>
                                <td>@Html.DisplayFor(model => model.CreateAt)</td>

                            </tr>
                        </tbody>

                    </table>

                    <div class="container mt-5 d-flex flex-column align-items-center">
                        <h2 class="text-center">Hình ảnh sản phẩm</h2>
                        <img src="~/Public/img/product/@Html.DisplayFor(model => model.Img)" width="250" height="250" alt="Img" class="img-fluid" />
                    </div>

                    <div class="container mt-3">
                        <h2 class="text-center">Mô tả sản phẩn</h2>
                        <p class="text-center mt-3">
                            @Html.DisplayFor(model => model.MetaDesc)
                        </p>
                    </div>

                </div>
            </div>
        </section>
    </div>
</div>